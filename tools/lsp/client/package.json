{
  "name": "kro-language-extension",
  "displayName": "Kro Language Extension",
  "description": "Language support for Kro YAML files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:kro-yaml",
    "workspaceContains:**/*.yaml",
    "workspaceContains:**/*.yml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kro-yaml",
        "aliases": [
          "Kro YAML",
          "Kro"
        ],
        "extensions": [
          ".yaml",
          ".yml"
        ],
        "filenames": [
          "Krofile"
        ],
        "configuration": "./language-configuration.json",
        "priority": 1
      }
    ],
    "grammars": [
      {
        "language": "kro-yaml",
        "scopeName": "source.kro-yaml",
        "path": "./syntaxes/kro.tmLanguage.json",
        "injectTo": [
          "source.yaml"
        ],
        "embeddedLanguages": {
          "source.kro-yaml": "yaml"
        }
      }
    ],
    "configurationDefaults": {
      "[kro-yaml]": {
        "editor.tokenColorCustomizations": {
          "textMateRules": [
            {
              "scope": "entity.name.tag.kro-yaml",
              "settings": {
                "foreground": "#61AFEF"
              }
            },
            {
              "scope": "variable.other.cel.kro-yaml",
              "settings": {
                "foreground": "#FF2629"
              }
            },
            {
              "scope": "string.unquoted.kro-yaml",
              "settings": {
                "foreground": "#E06C75"
              }
            },
            {
              "scope": "comment.line.number-sign.kro-yaml",
              "settings": {
                "foreground": "#7F848E"
              }
            },
            {
              "scope": "keyword.other.marker.kro-yaml",
              "settings": {
                "foreground": "#E5C07B"
              }
            },
            {
              "scope": "keyword.other.marker.value.kro-yaml",
              "settings": {
                "foreground": "#E5C07B"
              }
            }
          ]
        },
        "editor.defaultFormatter": "kro-language-extension",
        "files.associations": {
          "*.yaml": "kro-yaml",
          "*.yml": "kro-yaml"
        }
      }
    },
    "configuration": {
      "type": "object",
      "title": "Kro Language Server",
      "properties": {
        "kroLanguageServer.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Kro language server binary"
        },
        "kroLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "KRO YAML extension can be enabled in untrusted workspaces"
    }
  },
  "extensionKind": [
    "workspace"
  ]
}
