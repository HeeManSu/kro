{
  "name": "kro-language-extension",
  "displayName": "Kro Language Extension",
  "description": "Language support for Kro YAML files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kro-yaml",
        "aliases": [
          "Kro YAML",
          "Kro",
          "ResourceGraphDefinition"
        ],
        "extensions": [
          ".yaml",
          ".yml"
        ],
        "filenames": [
          "Krofile"
        ],
        "filenamePatterns": [
          "**/examples/**/*.yaml",
          "**/examples/**/*.yml",
          "**/*rgd*.yaml",
          "**/*rgd*.yml",
          "**/*kro*.yaml",
          "**/*kro*.yml"
        ],
        "firstLine": "^(apiVersion:\\s*(kro\\.run/v1alpha1|v1alpha1).*|kind:\\s*ResourceGraphDefinition)",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kro-yaml",
        "scopeName": "source.kro-yaml",
        "path": "./syntaxes/kro.tmLanguage.json",
        "injectTo": [
          "source.yaml"
        ]
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "entity.name.tag.kro-yaml",
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": "variable.other.cel.expression.kro-yaml",
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": "support.type.basic.kro-yaml",
            "settings": {
              "foreground": "#4EC9B0"
            }
          },
          {
            "scope": "keyword.other.marker.kro-yaml",
            "settings": {
              "foreground": "#CE9178"
            }
          },
          {
            "scope": "punctuation.separator.kro-yaml",
            "settings": {
              "foreground": "#CE9178"
            }
          },
          {
            "scope": "comment.line.number-sign.kro-yaml",
            "settings": {
              "foreground": "#6A9955"
            }
          }
        ]
      },
      "[kro-yaml]": {
        "editor.defaultFormatter": "kro-language-extension"
      },
      "[yaml]": {
        "files.associations": {
          "*.yaml": "kro-yaml",
          "*.yml": "kro-yaml"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "KRO YAML extension can be enabled in untrusted workspaces"
    }
  },
  "extensionKind": [
    "workspace"
  ]
}
